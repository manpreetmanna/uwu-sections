{%- liquid
  assign og_title = page_title
  assign og_url = canonical_url
  assign og_type = 'website'
  assign og_description = page_description | default: shop.description | default: shop.name

  if request.page_type == 'product' and product != blank
    assign og_type = 'product'
  elsif request.page_type == 'article' and article != blank
    assign og_type = 'article'
  elsif request.page_type == 'collection' and collection != blank
    assign og_type = 'product.group'
  endif

  assign og_image = null

  if page_image
    assign og_image = page_image
  elsif request.page_type == 'product' and product != blank and product.featured_media
    assign og_image = product.featured_media
  elsif request.page_type == 'collection' and collection != blank and collection.featured_image
    assign og_image = collection.featured_image
  elsif request.page_type == 'article' and article != blank and article.image
    assign og_image = article.image
  elsif settings.logo != blank
    assign og_image = settings.logo
  endif
-%}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">

{%- if og_image -%}
  <meta property="og:image" content="{{ og_image | image_url: width: 1200, height: 630, crop: 'center' }}">
  <meta property="og:image:secure_url" content="{{ og_image | image_url: width: 1200, height: 630, crop: 'center' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{%- endif -%}

<meta name="twitter:card" content="{% if og_image %}summary_large_image{% else %}summary{% endif %}">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">

{%- if og_image -%}
  <meta name="twitter:image" content="{{ og_image | image_url: width: 1200, height: 630, crop: 'center' }}">
{%- endif -%}
