{{ 'bub-stats.css' | asset_url | stylesheet_tag }}

<section class="stats bub-stats">
  <div class="container">
    <div class="stats-grid">
      <div class="stat">
        <span class="stat-label">Items Produced</span>
        <div class="stat-value">
          <span class="stat-number">1.2M</span>
          <span class="stat-unit">Units</span>
        </div>
        <p class="stat-caption">High-Quality Custom Goods</p>
      </div>
      <div class="stat stat-bordered">
        <span class="stat-label">Global Reach</span>
        <div class="stat-value">
          <span class="stat-number">180+</span>
          <span class="stat-unit">Countries</span>
        </div>
        <p class="stat-caption">Door-to-Door Delivery</p>
      </div>
      <div class="stat">
        <span class="stat-label">Partnered Creators</span>
        <div class="stat-value">
          <span class="stat-number">1000+</span>
          <span class="stat-unit">Global</span>
        </div>
      </div>
    </div>
  </div>
</section>
