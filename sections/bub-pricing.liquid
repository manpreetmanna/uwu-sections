{{ 'bub-pricing.css' | asset_url | stylesheet_tag }}

<section class="pricing bub-pricing bub-scope">
  <div class="container">
    <div class="pricing-grid">
      {% for block in section.blocks %}
        {%- liquid
          assign card_style = block.settings.card_style
          assign card_classes = 'pricing-card'
          if card_style == 'featured'
            assign card_classes = card_classes | append: ' featured'
          elsif card_style == 'enterprise'
            assign card_classes = card_classes | append: ' enterprise'
          endif
          assign price_class = 'price'
          if card_style == 'featured'
            assign price_class = price_class | append: ' highlight'
          endif
          assign features = block.settings.features | split: '\n'
        -%}
        <article class="{{ card_classes }}" {{ block.shopify_attributes }}>
          {% if card_style == 'featured' and block.settings.badge_text != blank %}
            <div class="featured-badge">{{ block.settings.badge_text | escape }}</div>
          {% endif %}
          <div class="pricing-head">
            <h3>{{ block.settings.title | escape }}</h3>
            <p>{{ block.settings.description | escape }}</p>
            <div class="pricing-value">
              <span class="{{ price_class }}">{{ block.settings.price | escape }}</span>
              <span class="price-note">{{ block.settings.price_note | escape }}</span>
            </div>
          </div>
          <div class="pricing-features">
            {% for feature in features %}
              {% assign feature_text = feature | strip %}
              {% if feature_text != blank %}
                <div class="feature-line{% if card_style == 'featured' %} strong{% endif %}">
                  <span class="material-symbols-outlined">check_circle</span>
                  <span>{{ feature_text | escape }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          {% if block.settings.button_text != blank %}
            {% if block.settings.button_link != blank %}
              <a
                class="btn btn-primary btn-block{% if card_style == 'featured' %} btn-emphasis{% endif %}"
                href="{{ block.settings.button_link }}"
              >
                {{ block.settings.button_text | escape }}
                {% if block.settings.button_icon != blank %}
                  <span class="material-symbols-outlined">{{ block.settings.button_icon | escape }}</span>
                {% endif %}
              </a>
            {% else %}
              <button
                class="btn btn-primary btn-block{% if card_style == 'featured' %} btn-emphasis{% endif %}"
                type="button"
              >
                {{ block.settings.button_text | escape }}
                {% if block.settings.button_icon != blank %}
                  <span class="material-symbols-outlined">{{ block.settings.button_icon | escape }}</span>
                {% endif %}
              </button>
            {% endif %}
          {% endif %}
        </article>
      {% endfor %}
    </div>
  </div>
</section>

