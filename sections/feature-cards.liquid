{{ 'uwu-sections.css' | asset_url | stylesheet_tag }}

<section class="uwu-feature-cards" id="section-{{ section.id }}">
  <div class="uwu-feature-cards__container">
    <div class="uwu-feature-cards__grid">
      {% for block in section.blocks %}
        <div class="uwu-feature-card" {{ block.shopify_attributes }}>
          <div class="uwu-feature-card__icon">
            {% case block.settings.icon %}
              {% when 'network' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                </svg>
              {% when 'chart' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M3 13h2v8H3v-8zm4-3h2v11H7V10zm4-3h2v14h-2V7zm4-3h2v17h-2V4zm4 6h2v11h-2V10z"/>
                </svg>
              {% when 'medal' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2l2.4 4.8 5.4.6-4.1 3.8 1.2 5.4L12 14l-4.9 2.6 1.2-5.4-4.1-3.8 5.4-.6L12 2zm0 15c-2.2 0-4 1.8-4 4h8c0-2.2-1.8-4-4-4zm-6.3-3.7l-1.4 1.4C5.4 15.8 6 17 6 18.4V20h2v-1.6c0-2-.8-3.8-2.3-5.1zm12.6 0c-1.5 1.3-2.3 3.1-2.3 5.1V20h2v-1.6c0-1.4.6-2.6 1.7-3.7l-1.4-1.4z"/>
                </svg>
              {% when 'people' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                </svg>
              {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                </svg>
            {% endcase %}
          </div>

          <h4 class="uwu-feature-card__title">{{ block.settings.title }}</h4>
          
          {% if block.settings.description != blank %}
            <p class="uwu-feature-card__description">{{ block.settings.description }}</p>
          {% endif %}

          <div class="uwu-feature-card__footer">
            <span class="uwu-feature-card__footer-label">{{ block.settings.footer_label }}</span>
            <svg class="uwu-feature-card__footer-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
            </svg>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature Cards",
  "tag": "section",
  "class": "feature-cards-section",
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Feature Card",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "network", "label": "Network / Globe" },
            { "value": "chart", "label": "Chart / Analytics" },
            { "value": "medal", "label": "Medal / Award" },
            { "value": "people", "label": "People / Community" },
            { "value": "star", "label": "Star" }
          ],
          "default": "people"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Describe your feature here. Explain the benefits and value it provides to your customers."
        },
        {
          "type": "text",
          "id": "footer_label",
          "label": "Footer Label",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Cards",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "icon": "people",
            "title": "Sell Alongside Other Creators",
            "description": "60% of orders on UwU Market include more than 1 creator's merch! This allows creators to benefit from selling merch along side our large network of other creators.",
            "footer_label": "Network Effect"
          }
        },
        {
          "type": "card",
          "settings": {
            "icon": "chart",
            "title": "Track Your Sales",
            "description": "Gain access to UwU Market's backend dashboard to track your sales, view your customer's notes, payouts and more!",
            "footer_label": "Dashboard"
          }
        },
        {
          "type": "card",
          "settings": {
            "icon": "medal",
            "title": "Earn Rewards",
            "description": "Get the recognition your deserve by earning rewards the more you sell.",
            "footer_label": "Milestones"
          }
        }
      ]
    }
  ]
}
{% endschema %}
