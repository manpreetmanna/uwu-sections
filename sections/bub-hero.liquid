{{ 'bub-hero.css' | asset_url | stylesheet_tag }}
<link
  href="https://fonts.googleapis.com/css2?family=Epilogue:wght@300;400;500;700;900&amp;display=swap"
  rel="stylesheet"
>

{%- assign background_image = section.settings.background_image -%}
<section
  class="hero bub-hero bub-scope{% if background_image != blank %} has-bg{% endif %}{% if section.settings.invert_text %} is-inverted{% endif %}"
  {% if background_image != blank or section.settings.overlay_opacity != blank %}
    style="{% if background_image != blank %}background-image: url({{ background_image | image_url: width: 2400 }});{% endif %}--hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
  {% endif %}
>
  <div class="container hero-content">
    <div class="pill">
      <span class="pill-dot">
        <span class="pill-dot-ping"></span>
        <span class="pill-dot-core"></span>
      </span>
      {{ section.settings.pill_text | escape }}
    </div>
    <h1 class="hero-title">
      {{ section.settings.title_line | escape -}}
      <br>
      <span class="accent">{{ section.settings.title_accent | escape }}</span>
    </h1>
    <p class="hero-subtitle">
      {{ section.settings.subtitle | escape | newline_to_br }}
    </p>
    <div class="hero-actions">
      {% if section.settings.primary_button_text != blank %}
        {% if section.settings.primary_button_link != blank %}
          <a class="btn btn-primary btn-lg" href="{{ section.settings.primary_button_link }}">
            {{ section.settings.primary_button_text | escape }}
          </a>
        {% else %}
          <a class="btn btn-primary btn-lg" href="#">
            {{ section.settings.primary_button_text | escape }}
          </a>
        {% endif %}
      {% endif %}
      {% if section.settings.secondary_button_text != blank %}
        {% if section.settings.secondary_button_link != blank %}
          <a class="btn btn-secondary btn-lg" href="{{ section.settings.secondary_button_link }}">
            {{ section.settings.secondary_button_text | escape }}
          </a>
        {% else %}
          <a class="btn btn-secondary btn-lg" href="#">
            {{ section.settings.secondary_button_text | escape }}
          </a>
        {% endif %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bub Hero",
  "settings": [
    {
      "type": "text",
      "id": "pill_text",
      "label": "Pill text",
      "default": "Premium Merch Manufacturing"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Background overlay opacity",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "invert_text",
      "label": "Invert text color on image",
      "default": false
    },
    {
      "type": "text",
      "id": "title_line",
      "label": "Title line",
      "default": "BUILD YOUR"
    },
    {
      "type": "text",
      "id": "title_accent",
      "label": "Title accent",
      "default": "BRAND."
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Turn your ideas into custom merch collections. We handle the design, ethical manufacturing, and global shipping so you can focus on creating."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "View Product Packages"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Bub Hero"
    }
  ]
}
{% endschema %}
