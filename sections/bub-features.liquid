{{ 'bub-features.css' | asset_url | stylesheet_tag }}
{{ 'bub-index.css' | asset_url | stylesheet_tag }}

<section class="features bub-features">
  <div class="container">
    <div class="feature-grid">
      {% for block in section.blocks %}
        <article class="feature-card" {{ block.shopify_attributes }}>
          <div class="feature-icon">
            <span class="material-symbols-outlined">{{ block.settings.icon | escape }}</span>
          </div>
          <h4>{{ block.settings.title | escape }}</h4>
          <p>{{ block.settings.description | escape | newline_to_br }}</p>
          {% if block.settings.footer_text != blank %}
            <div class="feature-footer">
              <span>{{ block.settings.footer_text | escape }}</span>
              <span class="material-symbols-outlined">arrow_forward</span>
            </div>
          {% endif %}
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bub Features",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "diversity_3"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sell Alongside Other Creators"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "60% of orders on UwU Market include more than 1 creator's merch! This allows creators to benefit from selling merch along side our large network of other creators."
        },
        {
          "type": "text",
          "id": "footer_text",
          "label": "Footer text",
          "default": "Network Effect"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Bub Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "diversity_3",
            "title": "Sell Alongside Other Creators",
            "description": "60% of orders on UwU Market include more than 1 creator's merch! This allows creators to benefit from selling merch along side our large network of other creators.",
            "footer_text": "Network Effect"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "monitoring",
            "title": "Track Your Sales",
            "description": "Gain access to UwU Market's backend dashboard to track your sales, view your customer's notes, payouts and more!",
            "footer_text": "Dashboard"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "military_tech",
            "title": "Earn Rewards",
            "description": "Get the recognition your deserve by earning rewards the more you sell.",
            "footer_text": "Milestones"
          }
        }
      ]
    }
  ]
}
{% endschema %}
