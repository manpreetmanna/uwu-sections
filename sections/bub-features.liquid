{{ 'bub-features.css' | asset_url | stylesheet_tag }}
{{ 'bub-index.css' | asset_url | stylesheet_tag }}

<section class="features bub-features bub-scope">
  <div class="container">
    <div class="feature-grid">
      {% for block in section.blocks %}
        {% assign modal_id = 'BubFeatureModal-' | append: section.id | append: '-' | append: block.id %}
        <article class="feature-card" {{ block.shopify_attributes }}>
          <div class="feature-icon">
            <span class="material-symbols-outlined">{{ block.settings.icon | escape }}</span>
          </div>
          <h4>{{ block.settings.title | escape }}</h4>
          <p>{{ block.settings.description | escape | newline_to_br }}</p>
          {% if block.settings.footer_text != blank %}
            {% if block.settings.popup_image != blank %}
              <modal-opener data-modal="#{{ modal_id }}">
                <button class="feature-footer feature-footer-button" type="button">
                  <span>{{ block.settings.footer_text | escape }}</span>
                  <span class="material-symbols-outlined">arrow_forward</span>
                </button>
              </modal-opener>
            {% else %}
              <div class="feature-footer">
                <span>{{ block.settings.footer_text | escape }}</span>
                <span class="material-symbols-outlined">arrow_forward</span>
              </div>
            {% endif %}
          {% endif %}
        </article>
        {% if block.settings.popup_image != blank %}
          <modal-dialog id="{{ modal_id }}" class="bub-feature-modal">
            <div
              class="bub-feature-modal__dialog"
              role="dialog"
              aria-modal="true"
              aria-label="{{ block.settings.title | escape }}"
            >
              <button
                id="ModalClose-{{ modal_id }}"
                type="button"
                class="bub-feature-modal__close"
                aria-label="Close"
              >
                <span class="material-symbols-outlined">close</span>
              </button>
              <div class="bub-feature-modal__media">
                {{
                  block.settings.popup_image
                  | image_url: width: 1800
                  | image_tag:
                    loading: 'lazy',
                    widths: '540, 720, 960, 1200, 1600, 1800',
                    sizes: '90vw',
                    alt: block.settings.title
                }}
              </div>
            </div>
          </modal-dialog>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bub Features",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "diversity_3"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sell Alongside Other Creators"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "60% of orders on UwU Market include more than 1 creator's merch! This allows creators to benefit from selling merch along side our large network of other creators."
        },
        {
          "type": "text",
          "id": "footer_text",
          "label": "Footer text",
          "default": "Network Effect"
        },
        {
          "type": "image_picker",
          "id": "popup_image",
          "label": "Popup image or GIF"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
