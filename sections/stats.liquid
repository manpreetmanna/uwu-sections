{{ 'uwu-sections.css' | asset_url | stylesheet_tag }}

<section class="uwu-stats" id="section-{{ section.id }}">
  <div class="uwu-stats__container">
    <div class="uwu-stats__grid">
      {% for block in section.blocks %}
        <div class="uwu-stats__item {% if forloop.index == 2 %}uwu-stats__item--bordered{% endif %}" {{ block.shopify_attributes }}>
          {% if block.settings.label != blank %}
            <span class="uwu-stats__label">{{ block.settings.label }}</span>
          {% endif %}
          <div class="uwu-stats__value-wrapper">
            <span class="uwu-stats__value">{{ block.settings.value }}</span>
            {% if block.settings.unit != blank %}
              <span class="uwu-stats__unit">{{ block.settings.unit }}</span>
            {% endif %}
          </div>
          {% if block.settings.description != blank %}
            <p class="uwu-stats__description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Stats",
  "tag": "section",
  "class": "stats-section",
  "settings": [],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Items Produced"
        },
        {
          "type": "text",
          "id": "value",
          "label": "Value",
          "default": "1.2M"
        },
        {
          "type": "text",
          "id": "unit",
          "label": "Unit",
          "default": "Units"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "High-Quality Custom Goods"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stats",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "label": "Items Produced",
            "value": "1.2M",
            "unit": "Units",
            "description": "High-Quality Custom Goods"
          }
        },
        {
          "type": "stat",
          "settings": {
            "label": "Global Reach",
            "value": "180+",
            "unit": "Countries",
            "description": "Door-to-Door Delivery"
          }
        },
        {
          "type": "stat",
          "settings": {
            "label": "Partnered Creators",
            "value": "1000+",
            "unit": "Global",
            "description": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}
