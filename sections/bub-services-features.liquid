{{ 'bub-services-features.css' | asset_url | stylesheet_tag }}

<section class="services-features bub-services-features bub-scope">
  <div class="container-md">
    <div class="section-heading">
      <h2>{{ section.settings.section_title | escape }}</h2>
      <p>{{ section.settings.section_description | escape | newline_to_br }}</p>
    </div>
    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-item" {{ block.shopify_attributes }}>
          <div class="feature-badge">
            <span class="material-symbols-outlined">{{ block.settings.icon | escape }}</span>
          </div>
          <h3>{{ block.settings.title | escape }}</h3>
          <p>{{ block.settings.description | escape | newline_to_br }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bub Services Features",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Standard Manufacturing Features"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section description",
      "default": "Included in every package tier as a standard of quality."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "inventory_2"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quality Control"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Rigorous three-stage inspection protocol for every single garment produced."
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Bub Services Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "inventory_2",
            "title": "Quality Control",
            "description": "Rigorous three-stage inspection protocol for every single garment produced."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "local_shipping",
            "title": "Global Shipping",
            "description": "International door-to-door delivery network optimized for fan fulfillment."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "brush",
            "title": "Design Support",
            "description": "Collaborate with our world-class artists and designers"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "eco",
            "title": "Eco-Sourcing",
            "description": "Sustainable organic fabrics and verified ethical labor practices worldwide."
          }
        }
      ]
    }
  ]
}
{% endschema %}
