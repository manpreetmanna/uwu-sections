{{ 'uwu-sections.css' | asset_url | stylesheet_tag }}

<section class="uwu-pricing-cards" id="section-{{ section.id }}">
  <div class="uwu-pricing-cards__container">
    <div class="uwu-pricing-cards__grid">
      {% for block in section.blocks %}
        <div class="uwu-pricing-card {% if block.settings.is_featured %}uwu-pricing-card--featured{% endif %}{% if block.settings.is_dark %}uwu-pricing-card--dark{% endif %}" {{ block.shopify_attributes }}>
          
          {% if block.settings.is_featured and block.settings.popular_text != blank %}
            <div class="uwu-pricing-card__popular-badge">{{ block.settings.popular_text }}</div>
          {% endif %}

          <div class="uwu-pricing-card__header">
            <h3 class="uwu-pricing-card__title">{{ block.settings.title }}</h3>
            {% if block.settings.description != blank %}
              <p class="uwu-pricing-card__description">{{ block.settings.description }}</p>
            {% endif %}
            <div class="uwu-pricing-card__price-wrapper">
              <span class="uwu-pricing-card__price">{{ block.settings.price }}</span>
              {% if block.settings.price_unit != blank %}
                <span class="uwu-pricing-card__price-unit">{{ block.settings.price_unit }}</span>
              {% endif %}
            </div>
          </div>

          <div class="uwu-pricing-card__features">
            {% if block.settings.feature_1 != blank %}
              <div class="uwu-pricing-card__feature">
                <svg class="uwu-pricing-card__feature-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>{{ block.settings.feature_1 }}</span>
              </div>
            {% endif %}
            {% if block.settings.feature_2 != blank %}
              <div class="uwu-pricing-card__feature">
                <svg class="uwu-pricing-card__feature-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>{{ block.settings.feature_2 }}</span>
              </div>
            {% endif %}
            {% if block.settings.feature_3 != blank %}
              <div class="uwu-pricing-card__feature">
                <svg class="uwu-pricing-card__feature-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                <span>{{ block.settings.feature_3 }}</span>
              </div>
            {% endif %}
          </div>

          <a href="{{ block.settings.button_url }}" class="uwu-pricing-card__btn">
            {{ block.settings.button_text }}
            {% case block.settings.button_icon %}
              {% when 'rocket' %}
                <svg class="uwu-pricing-card__btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2.5c0 0-5.5 4.5-5.5 11.5 0 3.5 2.5 6 5.5 6s5.5-2.5 5.5-6c0-7-5.5-11.5-5.5-11.5zm0 15c-1.93 0-3.5-1.57-3.5-3.5 0-3.82 2.08-7.13 3.5-8.93 1.42 1.8 3.5 5.11 3.5 8.93 0 1.93-1.57 3.5-3.5 3.5z"/>
                </svg>
              {% when 'arrow' %}
                <svg class="uwu-pricing-card__btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
                </svg>
              {% when 'timer' %}
                <svg class="uwu-pricing-card__btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M15 1H9v2h6V1zm-4 13h2V8h-2v6zm8.03-6.61l1.42-1.42c-.43-.51-.9-.99-1.41-1.41l-1.42 1.42C16.07 4.74 14.12 4 12 4c-4.97 0-9 4.03-9 9s4.02 9 9 9 9-4.03 9-9c0-2.12-.74-4.07-1.97-5.61zM12 20c-3.87 0-7-3.13-7-7s3.13-7 7-7 7 3.13 7 7-3.13 7-7 7z"/>
                </svg>
              {% when 'diamond' %}
                <svg class="uwu-pricing-card__btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M19 3H5L2 9l10 12L22 9l-3-6zM9.62 8l1.5-3h1.76l1.5 3H9.62zM11 10v6.68L5.44 10H11zm2 0h5.56L13 16.68V10zm6.26-2h-2.65l-1.5-3h2.65l1.5 3zM6.24 5h2.65l-1.5 3H4.74l1.5-3z"/>
                </svg>
              {% when 'globe' %}
                <svg class="uwu-pricing-card__btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                </svg>
              {% when 'business' %}
                <svg class="uwu-pricing-card__btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M10 16v-1H3.01L3 19c0 1.11.89 2 2 2h14c1.11 0 2-.89 2-2v-4h-7v1h-4zm10-9h-4.01V5l-2-2h-4l-2 2v2H4c-1.1 0-2 .9-2 2v3c0 1.11.89 2 2 2h6v-2h4v2h6c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2zm-6 0h-4V5h4v2z"/>
                </svg>
              {% else %}
                <svg class="uwu-pricing-card__btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
                </svg>
            {% endcase %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

