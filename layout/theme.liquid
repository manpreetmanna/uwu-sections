              const cartCreateMutation = `mutation cartCreate($lines: [CartLineInput!]!, $discountCodes: [String!], $note: String, $attributes: [AttributeInput!]) { cartCreate(input: { lines: $lines, discountCodes: $discountCodes, note: $note, attributes: $attributes }) { cart { checkoutUrl } userErrors { field message } } }`;
